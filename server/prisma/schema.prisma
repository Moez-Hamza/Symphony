// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firsName  String?
  lastName String?
  img   String  @unique
  role  Role    @default(User)
 
}

model Sheet {
  id  Int @id @default(autoincrement())
  img String @unique 
  name String?
  videoURL String?
  fav Boolean?
  comments Comment[]
  level String?  
}

model Comment {
  id  Int @id @default(autoincrement())
  content String?
  sheet Sheet? @relation(fields: [sheetId], references: [id]) 
  sheetId Int?
}

enum Role {
  User
}
